    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4086",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            },
            "runtimeArgs": ["--remote-debugging-port=9222"],
            "sourceMaps": true,
            "preLaunchTask": "npm: dev", 

            // "sourceMapPathOverrides": {
            //     "webpack:///./src/*": "${webRoot}/*"
            // },
            // "runtimeArgs": [
            //     "--remote-debugging-port=9222"
            // ],
            // "sourceMaps": true
        }
    ]
}